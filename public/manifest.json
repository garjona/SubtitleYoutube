{
  "manifest_version": 2,

  "name": "My Extension",
  "description": "This extension is a starting point to create a real Chrome extension",
  "version": "0.0.2",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  },
  "background": {
    "scripts": ["app/background.js"]
  },
  "permissions": [
    "webRequest",
    "*://developer.mozilla.org/",
    "*://*.youtube.com/api/*"
  ]
}